@model DepartmentsDetailsViewModel
@{
    ViewData["Title"] = "Delete Department";
}

<h1>Are You Sure to Delete this Department ?</h1>


<br />
<br />

<!--Bootstrap Tabs-->
<ul class="nav nav-tabs" id="departmentTabs" role="tablist">
	<li class="nav-item" role="presentation">
		<a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
	</li>
	<li class="nav-item" role="presentation">
		<a class="nav-link" id="administration-tab" data-bs-toggle="tab" href="#administration" role="tab" aria-controls="administration" aria-selected="false">Administration</a>
	</li>
</ul>

<div class="tab-content" id="myTabContent">

	<!--General Tab Content-->
	<div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general">

		<div class="row">
			<div class="form-group col-6 mb-4">
				<label class="form-label" asp-for="Code"></label>
				<input asp-for="Code" class="form-control" disabled />
			</div>

			<div class="form-group col-6 mb-4">
				<label class="form-label" asp-for="Name"></label>
				<input asp-for="Name" class="form-control" disabled />
			</div>

			<div class="form-group col-6 mb-4">
				<label class="form-label" asp-for="Description"></label>
				<input asp-for="Description" class="form-control" disabled />
			</div>

			<div class="form-group col-6 mb-4">
				<label class="form-label" asp-for="CreationDate"></label>
				<input asp-for="CreationDate" type="date" class="form-control" disabled />
			</div>


		</div>

	</div>

	<!--Administration Tab Content-->
	<div class="tab-pane fade p-4 border" id="administration" role="tabpanel" aria-labelledby="administration">

		<div class="row col-12">
			<div class="form-group col-6">
				<label class="form-label" asp-for="CreatedBy"></label>
				<input asp-for="CreatedBy" class="form-control" disabled />
			</div>

			<div class="form-group col-6">
				<label class="form-label" asp-for="CreatedOn"></label>
				<input asp-for="CreatedOn" class="form-control" disabled />
			</div>

			<div class="form-group col-6">
				<label class="form-label" asp-for="LastModifiedBy"></label>
				<input asp-for="LastModifiedBy" class="form-control" disabled />
			</div>

			<div class="form-group col-6">
				<label class="form-label" asp-for="LastModifiedOn"></label>
				<input asp-for="LastModifiedOn" class="form-control" disabled />
			</div>

		</div>
	</div>

	<form asp-action="Delete" asp-route-id="@Model.Id" class="mt-4">
		<input type="submit" value="Delete" class="btn btn-danger" />
		<a asp-action="Index" class="btn btn-secondary">Back to List</a>
	</form>

</div>


