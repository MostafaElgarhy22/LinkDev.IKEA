@model UpdateDepartmentViewModel
@{
    ViewData["Title"] = "Update Department";
}

<h1>Update Department</h1>


<br />
<br />


<div class="row justify-content-center align-items-center">

    <div class="col-8 mt-4">
        <form asp-action="Edit">

            <div asp-validation-summary="All" class="text-danger"></div>

           @*  <input name="Id" value="20" /> *@

            <div class="form-group mb-3">
                <label class="form-label" asp-for="Code"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label" asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="form-group mb-3">
                <label class="form-label" asp-for="CreationDate"></label>
                <input type="date" asp-for="CreationDate" class="form-control" />

            </div>

            <div class="mt-3">
                <input type="submit" value="Save" class="btn btn-seccess" />
                <a asp-action="Index" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>